@model NoteContent

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (Model.ResponseOrdinal == 0)
{
<h3>Are you sure you want to delete this note?</h3>
}
else
{
    <h3>Are you sure you want to delete this response?</h3>
}
<div>
    <h4>Note</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NoteSubject)
        </dt>

        <dd>
            @Html.Raw(Model.NoteSubject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NoteID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoteID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastEdited)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastEdited)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger btn-sm">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
@*            <input type="submit" value="Delete" class="btn btn-default" />*@
             |
            @Html.ActionLink("Back to Note", "Display", new {id = Model.NoteID } )
        </div>
    }
</div>
