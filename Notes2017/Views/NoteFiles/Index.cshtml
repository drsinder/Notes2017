@model IEnumerable<NoteFile>

@{
    ViewData["Title"] = "Index";
}

<h2>NoteFile List</h2>

<p>
    @Html.ActionLink("Create New", "Create")   
    @if (ViewBag.announce) {@Html.ActionLink(" | Create Announce", "CreateAnnounce") }
    @if (ViewBag.pbnotes) {@Html.ActionLink(" | Create Pbnotes", "CreatePbnotes") }
    @if (ViewBag.noteshelp) {@Html.ActionLink(" | Create Noteshelp", "CreateNoteshelp") }
    @if (ViewBag.pad) {@Html.ActionLink(" | Create Pad", "CreatePad") }

    <span class="keep-right">@Html.ActionLink("Import", "Index", "NotesImport")</span>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoteFileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteFileTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEdited)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoteFileID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoteFileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteFileTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastEdited)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoteFileID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NoteFileID }) |
            @Html.ActionLink("Details", "Details", new { id=item.NoteFileID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NoteFileID })
        </td>
    </tr>
}

</table>
