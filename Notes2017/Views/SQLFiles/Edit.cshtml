@model Notes2017.Models.SQLFile

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

@{
    string url = "/File/GetById/" + Model.FileId;
}


<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>SQLFile</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FileId" />
        <input type="hidden" asp-for="ContentID" />
        <input type="hidden" asp-for="ContentType" />
        <input type="hidden" asp-for="Contributor" />
        <input type="hidden" asp-for="FileName" />
        <div class="form-group">
            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comments, 10, 80, null )
                @*<input asp-for="Comments" class="form-control" />*@
                <span asp-validation-for="Comments" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<p><img src="@url" /></p>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
